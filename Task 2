def calculate_grade(marks):
    """
    Calculates the letter grade and provides an encouraging message based on the given marks.

    Args:
        marks (float): The student's marks (expected to be between 0 and 100).

    Returns:
        tuple: A tuple containing the letter grade (str) and an encouraging message (str).
    """
    if not (0 <= marks <= 100):
        return None, "Invalid input! Please enter marks between 0 and 100."

    if marks >= 90:
        grade = 'A'
        message = "Excellent work! Keep up the fantastic effort!"
    elif marks >= 80:
        grade = 'B'
        message = "Great job! You're doing very well!"
    elif marks >= 70:
        grade = 'C'
        message = "Good effort! There's always room to grow, keep pushing!"
    elif marks >= 60:
        grade = 'D'
        message = "You're on the right track! A little more dedication will make a big difference."
    else:
        grade = 'F'
        message = "Don't be discouraged! Learning is a journey, and every step counts. Let's work together to improve!"

    return grade, message

if __name__ == "__main__":
    try:
        student_marks = float(input("Enter student's marks (0-100): "))
        grade, message = calculate_grade(student_marks)

        if grade:
            print(f"Your grade is: {grade}")
            print(message)
        else:
            print(message)  # Prints the "Invalid input" message
    except ValueError:
        print("Invalid input. Please enter a numeric value for marks.")
